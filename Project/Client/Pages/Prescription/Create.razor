@page "/prescription/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Prescription</h3>
<hr />
<br />



<FormComponent ButtonText="Create Prescriptions" prescription="prescription" OnValidSubmit="@CreatePrescription" />

@code {
    Prescription prescription = new Prescription();

    private async Task CreatePrescription()
    {
        await _client.PostAsJsonAsync(Endpoints.PrescriptionEndpoint, prescription);
        _navManager.NavigateTo("/prescription/");
    }
}