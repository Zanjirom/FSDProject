<EditForm Model="@department" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <fieldset disabled="@Disabled">
        <div class=" form-group">
            <label>Name: </label>
            <div>
                <InputText @bind-Value="@department.Name" class="form-control" />
                <ValidationMessage For="@(() => department.Name)" />
            </div>
        </div>

        <div class=" form-group">
            <label>Location: </label>
            <div>
                <InputText @bind-Value="@department.Location" class="form-control" />
                <ValidationMessage For="@(() => department.Location)" />
            </div>
        </div>
    </fieldset>
    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>}

</EditForm>

@code { [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Department department { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; } }
